<ol>
    {{#each posts as |post|}}
    <li>
        <article>
            <div>
                <a href="/post/{{post.id}}">{{post.title}}</a>
                <span>Posted by {{post.user.username}} on {{post.created_at}}</span>
            </div>
            <div>
                {{post.post_content}}
            </div>
        </article>
    </li>
    {{/each}}
</ol>