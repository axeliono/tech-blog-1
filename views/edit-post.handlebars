<article>
    <a href="/dashboard" class="back-link"> &larr; Back to dashboard</a>
    <h2 class="section-title">
        Edit Post
    </h2>
    <form class="edit-post-form">
        <div>
            <input name="post-title" type="text" value="{{post.title}}" />
        </div>
        <div>
            <textarea name="post-text" id="post-text">{{post.post_content}}</textarea>
        </div>
        <div class="edit-post-info">
            Posted by you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <div class="btn-group">
            <button type="submit" class="btn">Save post</button>
            <button type="button" class="delete-post-btn btn">Delete post</button>
        </div>
    </form>
</article>

<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>
    <div>
        <button type="submit" class="comment-btn btn">add comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>